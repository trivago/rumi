<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Trivago\Rumi\Builders\ComposeParser" id="rumi.builders.compose_handler"/>

        <service class="Trivago\Rumi\Builders\DockerComposeYamlBuilder" id="rumi.docker_compose_yaml_builder">
            <argument type="service" id="rumi.docker.volume_inspector" />
        </service>

        <service class="Trivago\Rumi\Builders\JobConfigBuilder" id="rumi.job_config_builder">
            <argument type="service" id="rumi.builders.metric_config_builder" />
            <argument type="service" id="rumi.builders.compose_handler" />
        </service>
        <service class="Trivago\Rumi\Builders\MetricConfigBuilder" id="rumi.builders.metric_config_builder">
            <argument type="service" id="rumi.builders.compose_handler" />
        </service>


        <service class="Trivago\Rumi\Docker\VolumeInspector" id="rumi.docker.volume_inspector">
            <argument type="service" id="rumi.process.volume_inspect_process_factory" />
        </service>


        <service class="Trivago\Rumi\Process\RunningProcessesFactory" id="rumi.process.running_processes_factory"/>
        <service class="Trivago\Rumi\Process\GitCheckoutProcessFactory" id="rumi.process.git_checkout_process_factory"/>
        <service class="Trivago\Rumi\Process\CacheProcessFactory" id="rumi.process.cache_process_factory"/>
        <service class="Trivago\Rumi\Process\VolumeInspectProcessFactory" id="rumi.process.volume_inspect_process_factory"/>

    </services>
</container>
